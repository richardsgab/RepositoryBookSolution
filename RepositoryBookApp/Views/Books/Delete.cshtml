@using RepositoryBookApp.Enums
@model BookDetailsViewModel

<h2>Delete a book</h2>

<div class="card">
	<div class="card-body">
		@if(!string.IsNullOrEmpty(Model.ImagePath))
		{
			<div class="form-group">
				<img id="imgpreview" style="height:200px;" src="@Model.ImagePath" class="img-thumbnail img-fluid"/>
			</div>
		}
		<div class="form-group">
			<label asp-for="Title" class="control-label"></label>
			<input asp-for="Title" class="form-control" disabled />
		</div>

		<div class="form-group">
			<label asp-for="AuthorName" class="control-label"></label>
			<input asp-for="AuthorName" class="form-control" disabled />
		</div>

		<div class="form-group">
			<div class="form-group">
				<label>Is Available</label>
				<input type="checkbox" asp-for="IsAvailable" class="form-check-input" disabled />
			</div>
		</div>

		<div class="form-group">
			<div class="form-group">
				<label>Is New Release</label>
				<input type="checkbox" asp-for="IsNewRelease" class="form-check-input" disabled />
			</div>
		</div>

		<div class="form-group">
			<div class="form-group">
				<label>Is Best Seller</label>
				<input type="checkbox" asp-for="IsBestSeller" class="form-check-input" disabled />
			</div>
		</div>

		<label class="mt-2"><b>Type Binding</b></label>
		<div class="form-group">
			@foreach (var binding in Enum.GetValues<BindingType>())
			{
				<div class="form-check">
					<input type="radio" disabled asp-for="BindingType" value="@binding" class="form-check-input" />
					<label>@binding</label>
				</div>
			}
		</div>

		<div class="row mb-2">
			<div class="col-sm-2 font-weight-bold">Genres</div>
			<div class="col-sm-10">
				@foreach(var genre in Model.GenreNames)
				{
					<span class="badge" style="background-color: #007bff; color: white;">@genre</span>
				}
			</div>
		</div>

	</div>

	<form asp-action="Delete" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" asp-for="BookId"/>
		<div class="form-group">
			<input type="submit" value="Verwijderen" class="btn-primary" />
		</div>
		<div class="my-2">
			<a asp-action="Index" class="btn btn-secondary">Terug naar de lijst</a>
		</div>
	</form >
</div>